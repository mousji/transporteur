{% extends 'base.html.twig' %}

{% block title %}Chauffeur index{% endblock %}

{% block body %}
    <h1>Chauffeur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Date_permis</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chauffeur in chauffeurs %}
            <tr>
                <td>{{ chauffeur.id }}</td>
                <td>{{ chauffeur.nom }}</td>
                <td>{{ chauffeur.prenom }}</td>
                <td>{{ chauffeur.email }}</td>
                <td>{{ chauffeur.telephone }}</td>
                <td>{{ chauffeur.datePermis ? chauffeur.datePermis|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_chauffeur_show', {'id': chauffeur.id}) }}">show</a>
                    <a href="{{ path('app_chauffeur_edit', {'id': chauffeur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chauffeur_new') }}">Create new</a>
{% endblock %}
